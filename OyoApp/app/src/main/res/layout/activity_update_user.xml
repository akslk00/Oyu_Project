<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="729dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="1dp"

        android:layout_marginRight="24dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="회원정보관리"
            android:textAlignment="center"
            android:textColor="#111111"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="닉네임입니다."
            android:textAlignment="center"
            android:textColor="@color/defalt_balck"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="아이디 들어갈 자리"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editNickname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editbox_01"
            android:ems="10"
            android:hint="닉네임 입력"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/defalt_balck"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:foregroundGravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnDuplicateCheck"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_mini"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="중복확인"
                android:textAlignment="center"
                android:textColor="@color/main_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btnIdUpdate"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_mini"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="변경"
                android:textAlignment="center"
                android:textColor="@color/main_color"
                android:textSize="12sp" />

        </LinearLayout>


        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/editbox_01"
            android:ems="10"
            android:hint="비밀번호 입력"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/defalt_balck"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="비밀번호는 6자리 이상 13자리 이하로 설정하여 주십시오."
            android:textColor="@color/main_color"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editPasswordCheck"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/editbox_01"
            android:ems="10"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/defalt_balck"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/main_color"
            android:fontFamily="@font/pretendard_bold"
            android:text="수정"
            android:textSize="16sp"
            app:cornerRadius="0dp" />

        <TextView
            android:id="@+id/txtDeleteUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/txt_user_delete" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>