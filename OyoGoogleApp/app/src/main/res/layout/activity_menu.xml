<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/btnChatbot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="AI 테마별 요리 찾기"
            android:textColor="@color/main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/btnFridgeRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="AI 냉장고 재료 레시피 찾기"
            android:textColor="@color/main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/btnYoutube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="레시피 Youtube 영상 찾기 "
            android:textColor="@color/main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/btnThem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="이달의 테마"
            android:textColor="@color/main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="-"
            android:textColor="@color/main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/btnUserRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="회원들의 레시피"
            android:textColor="@color/main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/btnMyRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="나의 레시피"
            android:textColor="@color/main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="-"
            android:textColor="@color/main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/btnUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="회원정보관리"
            android:textColor="@color/main_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="@string/txt_logout"
            android:textAlignment="viewEnd"
            android:textColor="#959595"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>