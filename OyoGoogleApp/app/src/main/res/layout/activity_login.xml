<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:id="@+id/frame_32"
            android:layout_width="301dp"
            android:layout_height="574dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true"
            android:background="@drawable/frame_32"
            android:elevation="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="81.91dp"
                android:layout_height="30.62dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/oyo_logo" />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_bold"
                android:text="로그인"
                android:textAlignment="center"
                android:textColor="#111111"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="0"
                android:background="@drawable/editbox_01"
                android:ems="10"
                android:hint="ID 입력"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="0"
                android:background="@drawable/editbox_01"
                android:ems="10"
                android:hint="비밀번호 입력"
                android:inputType="textPassword"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:backgroundTint="@color/main_color"
                android:fontFamily="@font/pretendard_bold"
                android:letterSpacing="0.001"
                android:text="로그인"
                android:textSize="16sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btnNaverLogin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:backgroundTint="#12AC15"
                android:fontFamily="@font/pretendard_bold"
                android:letterSpacing="0.001"
                android:text="네이버 로그인"
                android:textSize="16sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btnKakaoLogin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:backgroundTint="#FFCD1E"
                android:fontFamily="@font/pretendard_bold"
                android:letterSpacing="0.001"
                android:text="카카오 로그인"
                android:textColor="#111111"
                android:textSize="16sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btnGoogleLogin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:backgroundTint="#EAEAEA"
                android:fontFamily="@font/pretendard_bold"
                android:letterSpacing="0.001"
                android:text="구글 로그인"
                android:textColor="#111111"
                android:textSize="16sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bg_color_light"
                android:fontFamily="@font/pretendard_bold"
                android:letterSpacing="0.001"
                android:text="회원가입"
                android:textColor="#111111"
                android:textSize="16sp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="false"
            android:layout_marginEnd="0dp"
            android:backgroundTint="@color/main_color"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bg_img_dark" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>